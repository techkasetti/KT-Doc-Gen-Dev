<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>58.0</apiVersion>
    <description>Advanced AI-Powered Document Viewer with Compliance Analytics and Collaboration</description>
    <isExposed>true</isExposed>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__RecordPage</target>
        <target>lightning__HomePage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <property name="recordId" type="String" description="Record ID"/>
            <property name="documentId" type="String" description="Document ID to view"/>
            <property name="enableCollaboration" type="Boolean" default="true" description="Enable comments and collaboration features"/>
            <property name="showMetadata" type="Boolean" default="true" description="Show document metadata sidebar"/>
        </targetConfig>
        <targetConfig targets="lightning__AppPage,lightning__HomePage">
            <property name="documentId" type="String" description="Document ID to view" required="true"/>
            <property name="enableCollaboration" type="Boolean" default="true" description="Enable comments and collaboration features"/>
<property name="showMetadata" type="Boolean" default="true" description="Show document metadata sidebar"/>
</targetConfig>
</targetConfigs>
</LightningComponentBundle>
