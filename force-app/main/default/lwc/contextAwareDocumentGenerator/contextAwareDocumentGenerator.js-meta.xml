<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    
    <apiVersion>59.0</apiVersion>
    <isExposed>true</isExposed>
    
    <!-- Supported Targets -->
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__RecordPage</target>
        <target>lightning__HomePage</target>
        <target>lightning__Tab</target>
        <target>lightningCommunity__Page</target>
    </targets>

    <!-- Target Configurations -->
    <targetConfigs>
        
        <!-- App & Home Page Configuration -->
        <targetConfig targets="lightning__AppPage,lightning__HomePage">
            <property 
                name="showHeader" 
                type="Boolean" 
                default="true" 
                label="Show Component Header"/>
            
            <property 
                name="defaultAIModel" 
                type="String" 
                default="" 
                label="Default AI Model"/>
            
            <property 
                name="allowModelSelection" 
                type="Boolean" 
                default="true" 
                label="Allow Users to Select AI Model"/>
            
            <property 
                name="maxDocuments" 
                type="Integer" 
                default="50" 
                label="Maximum Documents for Analysis"/>
            
            <property 
                name="enableAdvancedFeatures" 
                type="Boolean" 
                default="true" 
                label="Enable Advanced Features"/>
        </targetConfig>

        <!-- Record Page Configuration -->
        <targetConfig targets="lightning__RecordPage">
            <objects>
                <object>Account</object>
                <object>Contact</object>
                <object>Opportunity</object>
                <object>Case</object>
                <object>Document_Generation_Request__c</object>
            </objects>
            
            <property 
                name="contextObject" 
                type="String" 
                default="Account" 
                label="Context Object"/>
            
            <property 
                name="relatedListFields" 
                type="String" 
                default="Name,Type,Status" 
                label="Related List Fields"/>
        </targetConfig>

    </targetConfigs>

    <!-- Component Metadata -->
    <masterLabel>Context-Aware Document Generator</masterLabel>
    <description>
        Advanced AI-powered document generation with Anara-style 
        context analysis and multi-document reasoning capabilities
    </description>

</LightningComponentBundle>

